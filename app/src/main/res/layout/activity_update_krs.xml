<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update.UpdateKrsActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_update_mk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan matakuliah"
            android:importantForAutofill="no"
            android:inputType="text"
            android:backgroundTint="@color/colorPrimary" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/et_update_sks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan sks"
            android:importantForAutofill="no"
            android:inputType="number"
            android:backgroundTint="@color/colorPrimary" >
        </EditText>

        <EditText
            android:id="@+id/et_update_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan kelas"
            android:importantForAutofill="no"
            android:inputType="number"
            android:backgroundTint="@color/colorPrimary" >
        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_update_krs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ubah"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_delete_krs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hapus"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>