<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/view_header_krs">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_mk_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tv_sks_header"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="Matakuliah"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/tv_sks_header"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_kelas_header"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="SKS"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/tv_kelas_header"
        android:layout_width="95dp"
        android:text="Kelas"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:paddingLeft="3dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>